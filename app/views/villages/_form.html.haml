= form_for @village do |f|
  - if @village.errors.any?
    #error_explanation
      %h2= "#{pluralize(@village.errors.count, "error")} prohibited this village from being saved:"
      %ul
        - @village.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :cod
    = f.text_field :cod
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :department_id
    = f.text_field :department_id
  .field
    = f.label :municipality_id
    = f.text_field :municipality_id
  .actions
    = f.submit 'Save'

#carousel.carousel.slide{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    =#- product.images.each_with_index do |image, i|
    - (1..product.images.count).each do |i|
      %li.active{"data-slide-to" => i, "data-target" => "#carousel"}
  / Wrapper for slides
  .carousel-inner{:role => "listbox"}
    - product.images.each do |image|
      .item{class: product.images.first == image ? 'active' : ''}
        = image_tag url_for(image)
  / Controls
  %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#carousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only Next
= form_for @parameter do |f|
  - if @parameter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@parameter.errors.count, "error")} prohibited this parameter from being saved:"
      %ul
        - @parameter.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :tag
    = f.text_field :tag
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :int_value
    = f.text_field :int_value
  .field
    = f.label :text_value
    = f.text_field :text_value
  .actions
    = f.submit 'Save'

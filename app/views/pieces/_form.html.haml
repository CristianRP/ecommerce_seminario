= form_for @piece do |f|
  - if @piece.errors.any?
    #error_explanation
      %h2= "#{pluralize(@piece.errors.count, "error")} prohibited this piece from being saved:"
      %ul
        - @piece.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :amount_cod
    = f.text_field :amount_cod
  .field
    = f.label :delivery
    = f.text_field :delivery
  .actions
    = f.submit 'Save'
